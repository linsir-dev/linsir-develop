<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linsir.subject.smsv2.mapper.TeacherMapper">
    <select id="findAll" resultType="Teacher">
        SELECT * FROM linsir_subject_sms_v2.t;
    </select>

    <select id="findBySearch" resultType="Teacher">
        SELECT * FROM linsir_subject_sms_v2.t
        <where>
            <if test="tid != null">
                tid = #{tid}
            </if>
            <if test="tname != null">
                <if test="fuzzy == 0">
                    AND tname = #{tname}
                </if>
                <if test="fuzzy == 1">
                    AND tname LIKE CONCAT('%', #{tname}, '%')
                </if>
            </if>
        </where>
    </select>

    <select id="findById" resultType="Teacher">
        SELECT * FROM linsir_subject_sms_v2.t WHERE tid = #{tid};
    </select>

    <update id="updateById">
        UPDATE linsir_subject_sms_v2.t SET
                               tname = #{teacher.tname},
                               password = #{teacher.password}
        WHERE tid = #{teacher.tid};
    </update>

    <insert id="save">
        INSERT INTO linsir_subject_sms_v2.t (tname, password) VALUES (#{teacher.tname}, #{teacher.password})
    </insert>

    <delete id="deleteById">
        DELETE FROM linsir_subject_sms_v2.t WHERE tid = #{tid}
    </delete>
</mapper>